/* pages/star-luck/star-luck.wxss */
@import '/assets/my-components/button/index.wxss';
page{
 background: white !important;
  /* position: relative; */
}
.search-top{
  box-shadow: 2rpx 4rpx 8rpx 0 var(--box-shadow-gray);
}
.bottom{
  position: relative;
  top: 190rpx;
}
/* .bottom.min-height{
  top: 190rpx;
} */
.bottom-change{
  position: relative;
  top: 260rpx;
}
/* .bottom-change.min-height{
  top: 310rpx;
} */
.slot-content{
  padding: 0 26rpx;
}
.main-style{
  color: var(--main-style);font-size: 34rpx;
}
.iconc-main-style{
  color: var(--main-style);font-size: 36rpx;
}
.warning-text{
  margin-left: 4rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.warning-text.flex-end{
  justify-content: flex-end;
}

.warning-text .tuo-pu{
  display: flex;
  align-items: center;
}
.warning-text .tuo-pu text{ 
  text-decoration: underline;
  margin-left: 10rpx;
}
.warning-text text{
  font-size: 30rpx;
}
.bottom-content{
  margin-top: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.adventure-content{
  margin-top: 30rpx;
}
.adventure-edit{
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 20rpx;
}
.adventure-clue{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.adventure-clue:last-child{
 justify-content: flex-end;
}
.adventure-clue>view:first-child text{
  /* flex: 0.5;
  text-align: center; */
  font-size: 30rpx;
  margin-right: 10rpx;
}
.adventure-clue>view.adventure-input{
  flex: 0.9;
}
.adventure-clue .adventure-input{
  border: 2rpx solid var(--line-gray);
  font-size: 26rpx;
  padding: 6rpx 0;
}
.adventure-clue .adventure-input input{
  padding-left: 10rpx;
}
.luck-info{
  margin-top: 120rpx;
  display: flex;
  justify-content: center;
  flex-direction: row;
}
.luck-promote{
  margin-top: 60rpx;
  margin-left: 30rpx;
  line-height: 60rpx;
  
}
.luck-promote>view:last-child{
  display: flex;
  justify-content: center;
  flex-direction: row;
}
.adventure-picker{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 80rpx;
  align-items: center;
}
.adventure-picker:first-child {
  margin-top: 40rpx;
}
.adventure-picker>view{
  width: 220rpx;
}

.adventure-picker>view:first-child text{
  font-size: 30rpx;
}
picker{
  border: 2rpx solid var(--line-gray);
  height: 54rpx;
  line-height: 54rpx;
  width: calc(100% - 300rpx);
  font-size: 28rpx;
  padding-left: 14rpx;
  border-radius: 10rpx;
  position: relative;
  z-index: 100;
}
.adventure-picker .icon-arrowdownb{
  color: var(--line-gray);
  position: absolute;
  right: 50rpx;
  font-size: 40rpx;
}