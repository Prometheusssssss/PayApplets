}
.my-product-item-server{
 display: flex;
 flex-direction: column;
 padding: 10rpx 0;
 padding-top: 0;
}

/* 确认登录弹框 */
.mask-layer-content>.main-content>.content{
 display: flex;
 justify-content: space-around;
 flex-direction: column;
 align-items: center;
}
.mask-layer-content>.main-content>.content text{
 font-size: 26rpx;
}
.confirm-btn:first-child{
 border-right: 2rpx solid var(--line-gray);
}
.confirm-btn{
 height: 100rpx;
 padding: 16rpx 24rpx;
 border-radius: 0;
 font-size: 30rpx;
