
@import "/assets/my-components/button/index.wxss";
@import "/assets/my-components/mask-confirm/index.wxss";
@import "/pages/adventure/second-category.wxss";
.my-product-title{
 display: flex;
 flex-direction: row;
 align-items: center;
 justify-content: space-around;
 height: 80rpx;
 line-height: 80rpx;
 border-bottom: 2rpx solid var(--line-gray);

}

.item-product-name {
  line-height: 30rpx;
  margin-bottom: 0 !important;
  font-size: 28rpx;
 }
.my-product-title .icon{
 font-size: 28rpx;
 margin-right: 10rpx;
}

.my-product-item {
 padding: 12rpx 0 12rpx 10;
 display: inline-block;
 width: calc(100% - 12rpx);
 border-bottom: 18rpx solid var(--page-bg);
 background: white;
 margin-left: 12rpx;  
} 
.my-product-item:first-child{
 margin-top: 26rpx;
}

.my-product-item .item-product-info{
 display: flex;
 flex-direction: column;
 justify-content: center;
 padding: 10rpx 0;
 width: calc(100% -20rpx);
 margin: 0 10rpx;
 padding-top: 0;
}

.item-product-info .item-product-row{
 display: flex;
 flex-direction: row;
 align-items: center;
 text-align: center;
 border: 1px solid var(--line-gray);
}
.item-product-info .item-product-row:not(:last-child){
 border-bottom: none;
}
.item-product-info .item-product-row:first-child{
 background-color: var(--page-bg);
}

.item-product-info .item-product-row .row-flex{
 flex: 0.7;
 padding: 10rpx 0;
 /* border-right: 2rpx solid var(--line-gray); */
 text-align: center;
 /* padding-left: 20rpx; */
}
.item-product-info .item-product-row:first-child .row-flex{
  text-align: center;
}

.item-product-info .item-product-row .row-flex-content{
 /* flex: 1; */
 text-align: left;
 margin-left: 12rpx;
}
.item-product-info .item-product-row .row-flex-right{
  flex: 1;
  min-height: 60rpx;
  line-height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-left: 2rpx solid var(--line-gray);
}
.my-product-item .item-product-title{
 border-bottom: 2rpx solid var(--line-gray);
 padding: 10rpx 0;
 margin: 0 10rpx;
 margin-bottom: 12rpx;
 display: flex;
 flex-direction: row;
 /* justify-content: space-between; */
 align-items: center;
 padding-bottom: 20rpx;
}
.my-product-item .item-product-title>view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.my-product-item .item-product-title image{
  width: 160rpx;
  height: 160rpx;
}

.my-product-item .item-product-title .item-product-supllier text{ 
  font-size: 22rpx;
  color: var(--text-gray);
}

.item-product-title .item-product-title-info{
  margin-left: 30rpx;
  flex: 1;
  height: 130rpx;
  padding-top: 30rpx;
}
.item-product-title-info .item-product-name{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20rpx!important;
}
.item-product-supllier{
  text-align: right;
}
.my-product-item .item-product-title .item-product-name text{
  font-size: 36rpx;
}
.my-product-item .item-product-title .item-product-supllier text{
  font-size: 20rpx;
}
.my-product-item .item-not-include>view:first-child{
 padding-left: 20rpx;
}
.my-product-item .item-not-include>view:last-child{
 text-align: center;
 display: flex;
 justify-content: row;
 justify-content: center;
 margin: 20rpx 0;
}

.my-product-item .outline-rectangle{
 color: white!important;
}

.my-product-item  .icon-edit{
 color: var(--main-style);
}

.my-product-item  .icon-flower{
 font-size: 34rpx !important;
 color: #F4D2A7;
}

.my-product-item .item-product-title text{
 font-size: 24rpx;
}

.my-product-item .icon{
 margin-right: 10rpx;
 font-size: 40rpx;
}
.my-product-item .icon-main-style{
 color: var(--main-style);
}

.my-product-item-content {
 display: inline-block;
 border-bottom: 2rpx solid var(--page-bg);
}

.orgin-price .origin-promotion-price {
 text-decoration: line-through;
}

.orgin-price .item-product-text {
 font-size: 20rpx;
}




.icon-promotion {
 font-size: 30rpx;
 position: relative;
 top: 4rpx;
}



