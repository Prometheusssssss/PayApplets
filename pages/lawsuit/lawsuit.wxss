}
.item-product-bottom{
 display: flex;
 align-items: center;
 text-align: center;
 margin-top: 24rpx;
 justify-content: center;
}
.item-product-image{
 display: flex;
 flex-direction: column;
 align-items: start;
 margin-top: 10rpx;
}
.item-product-image image{
 width: 100%;
 height: 240rpx;
}
.item-product-image .row-flex-right{
 display: flex;
 align-items: center;
 justify-content: center;
 width: 100%;

}
.waiting-for{
  /* color: var(--text-red); */
