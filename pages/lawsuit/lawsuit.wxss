}

.recorder {
 bottom: 20rpx !important;
}

.icon-voice-order-content{
 z-index: 3;
 position: fixed;
bottom: 38rpx;
 right: 22vw;
 width: 70rpx;
 height: 70rpx;
 border-radius: 140rpx;
 display: flex;
 justify-content: center;
 align-content: center;
 align-items: center;
 
 
}

.icon-order-bg {
 background: var(--main-style);
 color: white;
 width: inherit;
 height: inherit;
