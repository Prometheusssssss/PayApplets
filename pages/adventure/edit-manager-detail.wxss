/* pages/adventure/edit-common-detail.wxss */
@import '/assets/my-components/button/index.wxss';
.adventure-content{
  background-color: white;
  
}
.adventure-content>view{
  border-bottom: 2rpx solid var(--page-bg);
  padding: 20rpx;
}
.adventure-title,.adventure-clue{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.adventure-input{
  width: calc(100% - 130rpx);
}
.adventure-input textarea{
  height: 150rpx;
  border: 2rpx solid var(--page-bg);
  font-size: 24rpx;
  padding: 6rpx 0 0 6rpx;
  width: 98%;
}

.bottom-content{
    margin-top: 40rpx;
    display: flex;
  align-items: center;
  justify-content: center;

}
.adventure-contributor{
  display: flex;
  align-items: center;
}
.adventure-name text{
  font-size: 26rpx;
}
.adventure-contributor text{
  font-size: 22rpx;
  margin-right: 20rpx;
}
.adventure-title{
  align-items: center;
}
.upload-view{
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 2rpx solid var(--line-gray-light);
  /* padding: 10rpx 0; */
  /* margin-left: 40rpx; */
  font-size: 24rpx;
  width: calc(100% - 40rpx);
  color: var(--text-black);
}
.upload>view{
  display: inline-block;
}
