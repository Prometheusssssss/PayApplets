.picker-content {
  padding: 10rpx 0;
  margin-left: 40rpx;
  width: calc(100% - 40rpx);
  color: var(--text-black);
  background: white;
  position: relative;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid var(--line-gray-light);
  overflow: hidden;
  flex-direction: row;
  height: 90rpx;
  max-height: 90rpx;
  align-items: flex-end;
}

.picker-content.column{
  flex-direction: column;
  height: 125rpx;
  max-height: 125rpx;
  align-items: flex-start;
}

.picker-content .picker-title {
  font-weight: 500;
  min-width: 180rpx;
  font-size: 30rpx;
  letter-spacing: -1rpx;
  margin-top: 16rpx;
  height: 36rpx;
  line-height: 36rpx;
  margin-bottom: 16rpx;
}

.picker-content .picker-text {
  flex: 1;
  line-height: 1.6;
  padding: 16rpx 0;
  height: 36rpx;
  width: 100%;
  min-height: 36rpx;
  max-height: 36rpx;
  max-width: 100%;
  display: flex;
  flex-direction: colunm;
  align-items: center;
  font-size: 26rpx;


}

.picker-content .picker-text view {
  color: var(--text-black);
  height: 36rpx;
  width: calc(100% - 180rpx);
  display: flex;
  flex-direction: row;
  line-height: 36rpx;
  position: absolute;
  padding: 16rpx 0;
  bottom: 10rpx;
}

.picker-content.column .picker-text view {
  width: 100%;
  align-items:center;
}

.picker-content .picker-text view i {
  font-size: 40rpx;
  position: absolute;
  right: 20rpx;
  margin-top:-6rpx;
}

.picker-content.column .picker-text view i{
  margin-top:0;
  top:10rpx;
}