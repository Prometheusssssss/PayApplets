.picker-content .picker-text{
 width: 600rpx;
 max-width: 600rpx;
 font-size: 26rpx;
}

.can-edit-main-detail{
  min-height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;  
  width: calc( 100% - 40rpx);
  padding: 28rpx 0 15rpx 0;
}
.picker-content .picker-detail{
  flex: 1;
  margin-right: 18rpx;
}
.picker-content .picker{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.picker-content .picker text{
  /* font-size: 28rpx; */
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}
.picker-content .picker-detail i{
  font-size: 40rpx;
}

.picker-title{
  font-weight: 500;
  min-width: 180rpx;
  font-size: 30rpx;
  letter-spacing: -1rpx;
  margin-top: 16rpx;
  height: 36rpx;
  line-height: 36rpx;
}
.no-authorize{
  display: flex;
  flex-direction: column;
  align-items: center;
  /* margin: 50rpx; */
  margin: 0 50rpx;
  text-align: center;
  position: relative;
  top: 70rpx;
}
.no-authorize image{
  width: 440rpx;
  height: 480rpx;  

}
.no-authorize .tip{
  color: var(--text-gray);
  font-size: 40rpx;
  letter-spacing: 2rpx;
  line-height: 54rpx;
}