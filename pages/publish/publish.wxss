.has-icon-line {
  padding: 10rpx 0;
  border-bottom: 2rpx solid var(--line-gray-light);
  color: var(--text-black);
  margin-left: 40rpx;
  width: calc(100% - 40rpx);
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  overflow: hidden;
  height: 90rpx;
  max-height: 90rpx;
}

