.no-authorize button.login-button {
  margin: 100rpx 50rpx 0 50rpx;
  font-size: 28rpx !important;
  color: white;
  font-weight: 500;
  background-color: var(--main-style) !important;
  min-width: 520rpx !important;
  width: 520rpx !important;
  border-radius: 40rpx;

}
.no-authorize{
  display: flex;
  flex-direction: column;
  align-items: center;
  /* margin: 50rpx; */
  margin: 0 50rpx;
  text-align: center;
  position: relative;
  top: 70rpx;
}
.user-info {
  flex: 1;
  display: flex;
  flex-direction: row;
  padding: 1vh 0 1vh 0;
  justify-content: flex-start;
  align-items: center;
  padding-top: 20rpx;
  padding-left: calc(22rpx + 20rpx);
  padding-right: 20rpx;
  /* margin-left: calc(42rpx + 20rpx);
  margin-top: 20rpx; */
  width: calc(100vw - 20rpx - 42rpx); 
  background-color: white;
}

.user-info .user-image {
  width: 11vh;
  height: 11vh;
  margin-right: 41rpx;
  border-radius: 100%;
  overflow: hidden;
  border: 2rpx solid var(--text-gray);
}

.user-info .title-info {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  flex: 1;
  line-height: 56rpx;
}
.user-info .invalidate-user {
  /* background: var(--main-style); */
  color: var(--text-black);
  /* border-radius: 8rpx; */
  padding: 8rpx 16rpx;
  font-size: 26rpx;
}
.user-info .invalidate-user .icon{
  font-size: 42rpx;
}


.menu {
  height: 12vh;
  /* width: calc(100vw - 40rpx); */
  /* margin-left: 20rpx; */
  margin-top: 1vh;
  background: var(--main-style);
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.menu > view {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
}

.menu view.cashout {
  border-right: 2rpx solid white;
}

.menu view.price {
  font-size: 30rpx;
  margin-bottom: 8rpx;
}

.menu view.detail-msg {
  margin-top: 8rpx;
  font-size: 20rpx;
}

.user-last-wallet {
  padding: 0 32rpx;
  height: 7vh;
  /* width: calc(100vw - 40rpx - 64rpx);
  margin-left: 20rpx; */
  background: white;
  color: var(--main-style);
  border-radius: 10rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.user-last-wallet .last-price {
  flex: 1;
}

.user-last-wallet .immediate-withdrawal {
  border: 2rpx solid var(--main-style);
  background: white;
  color: var(--main-style);
  border-radius: 8rpx;
  padding: 10rpx 24rpx;
  font-size: 26rpx;
}

.menu-items {
  margin-top: 1vh;
  margin-bottom: 30rpx;
  height: 12vh;
  /* width: calc(100vw - 40rpx);
  margin-left: 20rpx; */
  background: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.menu-items > view {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  padding: 10rpx 0;
  height: calc(100% - 20rpx);
}
.menu-items > view .icon.icon-check1 {
  font-size: 38rpx;
}
.menu-items > view .icon.icon-qianbao {
  font-size: 50rpx;
}

.menu-items > view .icon {
  color: var(--main-style);
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
  font-size: 50rpx;
}
.menu-items > view .icon.icon-collect {
  font-size: 60rpx;
}
.menu-items > view .text {
  color: var(--text-black);
  text-align: center;
}
.mask-layer-content-invite {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;

}

.button-area {
  /*  width: 35vw; */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.detail-info {
  padding: 22rpx 22rpx;
  color: var(--text-gray-dark);
}

