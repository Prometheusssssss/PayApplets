.no-authorize button.login-button {
  margin: 100rpx 50rpx 0 50rpx;
  font-size: 28rpx !important;
  color: white;
  font-weight: 500;
  background-color: var(--main-style) !important;
  min-width: 520rpx !important;
  width: 520rpx !important;
  border-radius: 40rpx;

}
.no-authorize{
  display: flex;
  flex-direction: column;
  align-items: center;
  /* margin: 50rpx; */
  margin: 0 50rpx;
  text-align: center;
  position: relative;
  top: 70rpx;
}
.user-info {
  flex: 1;
  display: flex;
  flex-direction: row;
  padding: 1vh 0 1vh 0;
  justify-content: flex-start;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: calc(22rpx + 20rpx);
  padding-right: 20rpx;
  width: calc(100vw - 20rpx - 42rpx); 
  background-color: white;
  margin-bottom: 40rpx;
  position: relative;
}

.user-info .user-image {
  width: 11vh;
  height: 11vh;
  margin-right: 41rpx;
  border-radius: 100%;
  overflow: hidden;
}

.user-info .title-info {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  flex: 1;
  line-height: 56rpx;
}
.user-info .invalidate-user {
  color: var(--text-black);
  /* padding: 8rpx 16rpx; */
  font-size: 26rpx;
  height: 70rpx;
  line-height: 70rpx;
  width: 100rpx;
  padding-right: 4vw;
  text-align: right;

}
.user-info .invalidate-user .icon{
  font-size: 42rpx;
}
.user-info .authBtn{
  margin: 0;
  /* width: calc(100vw - 110rpx); */
  background: transparent;
  font-size: 30rpx;
  position: absolute;
  left: 22vw;
  height: 8vh;
  top: 3.7vh;
  line-height: 8vh;
  padding-right: 200rpx;
}

.menu {
  height: 12vh;
  /* width: calc(100vw - 40rpx); */
  /* margin-left: 20rpx; */
  margin-top: 1vh;
  background: var(--main-style);
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.menu > view {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
}

.menu view.cashout {
  border-right: 2rpx solid white;
}

.menu view.price {
  font-size: 30rpx;
  margin-bottom: 8rpx;
}

.menu view.detail-msg {
  margin-top: 8rpx;
  font-size: 20rpx;
}

.user-last-wallet {
  padding: 0 32rpx;
  height: 7vh;
  /* width: calc(100vw - 40rpx - 64rpx);
  margin-left: 20rpx; */
  background: white;
  color: var(--main-style);
  border-radius: 10rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.user-last-wallet .last-price {
  flex: 1;
}

.user-last-wallet .immediate-withdrawal {
  border: 2rpx solid var(--main-style);
  background: white;
  color: var(--main-style);
  border-radius: 8rpx;
  padding: 10rpx 24rpx;
  font-size: 26rpx;
}

.menu-items {
  margin-top: 1vh;
  margin-bottom: 30rpx;
  height: 12vh;
  /* width: calc(100vw - 40rpx);
  margin-left: 20rpx; */
  background: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.menu-items > view {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  padding: 10rpx 0;
  height: calc(100% - 20rpx);
}
.menu-items > view .icon.icon-check1 {
  font-size: 38rpx;
}
.menu-items > view .icon.icon-qianbao {
  font-size: 50rpx;
}

.menu-items > view .icon {
  color: var(--main-style);
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
  font-size: 50rpx;
}
.menu-items > view .icon.icon-collect {
  font-size: 60rpx;
}
.menu-items > view .text {
  color: var(--text-black);
  text-align: center;
}
.mask-layer-content-invite {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;

}

.button-area {
  /*  width: 35vw; */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.detail-info {
  padding: 22rpx 22rpx;
  color: var(--text-gray-dark);
}

/* 订单列表 */
.menu-list {
  box-shadow: 0 4rpx 8rpx 0 var(--box-shadow-gray);
}

.menu-list .menu-item {
  background: white;
  height: 8.6vh;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 6vw;
  width: 88vw;
  border-bottom: 2rpx solid var(--page-bg);
  overflow: hidden;
}

.menu-list .menu-image {
  width: 54rpx;
  margin-right: 28rpx;
  font-size: 50rpx;
  text-align: center;
}

.menu-list .menu-image.icon-login-out{
  font-size: 42rpx;
  text-align: center;
}


.menu-list .menu-item.group {
  margin-top: 30rpx;
}

.menu-list .menu-item view {
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  align-items: center;
}

.menu-list .menu-item text {
  font-size: 28rpx;
  margin-left: 2vw;
}

.menu-list .menu-item i {
  font-size: 50rpx;
}

.menu-item .contact-server{
  width: 88vw;
  height: 8.6vh;
  background: transparent;
  position: absolute;
}
.user-name{
  font-size: 30rpx;
}
.tip-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.tip-info text{
  font-size: 26rpx;
}
.tip-info .tip-public{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.tip-public .previewImage{
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 0 20rpx 16rpx;
}
.tip-public .zanImageUrl{
  margin-left: 40rpx;
}
.tip-info image{
  width: 100%;
  height: 100%;
  /* margin: 20rpx 0 20rpx 16rpx; */
}
@import "/assets/my-components/mask-confirm/index.wxss";
/* //遮罩层 */
.mask-layer-content>.main-content>.content{
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
}
.mask-layer-content>.main-content>.content text{
  font-size: 26rpx;
}
.confirm-btn:first-child{
  border-right: 2rpx solid var(--line-gray);
}
.confirm-btn{
  height: 100rpx;
  padding: 16rpx 24rpx;
  border-radius: 0;
  font-size: 30rpx;
  font-weight: normal;
  margin: 0;
  width: 50%;
}
.confirm-btn:last-child{
  color: var(--main-style);
}
.title-tip{
  background-color: var(--main-style);
  text-align: center;
  height: 64rpx;
  line-height: 64rpx;
  margin-bottom: 20rpx;
}
.title-tip text{
  color: white;
}