/* pages/star-luck/star-luck.wxss */
@import '/assets/my-components/button/index.wxss';
page{
 background: white !important;
  /* position: relative; */
}
.search-top{
  box-shadow: 2rpx 4rpx 8rpx 0 var(--box-shadow-gray);
}
.bottom{
  position: relative;
  top: 200rpx;
}
.bottom.min-height{
  top: 100rpx;
}
.bottom-change{
  position: relative;
  top: 100rpx;
}
.bottom-change.min-height{
  top: 10rpx;
}
.slot-content{
  /* padding: 0 26rpx; */
}
.main-style{
  color: var(--main-style);font-size: 34rpx;
}
.warning-text{
  margin-left: 4rpx;
  margin-bottom: 30rpx;
 
}
.warning-text text{
  font-size: 30rpx;
}

.recommend-calculate{
  padding-bottom: 20rpx;
  background-color: white;
  border-bottom: 6rpx solid var(--page-bg);
}
.recommend-calculate>view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 12rpx;
}
.recommend-calculate>.bottom-content{
  display: flex;
  align-items: center;
  justify-content: center;
}
.adventure-edit{
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 20rpx;
}
.adventure-clue{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.adventure-clue:last-child{
 justify-content: flex-end;
}
.adventure-clue>view:first-child text{
  font-size: 30rpx;
  margin-right: 10rpx;
}
.luck-info{
  margin-top: 120rpx;
  display: flex;
  justify-content: center;
  flex-direction: row;
}
.luck-promote{
  margin-top: 60rpx;
  margin-left: 30rpx;
  line-height: 60rpx;
  
}
.luck-promote>view:last-child{
  display: flex;
  justify-content: center;
  flex-direction: row;
}

.adventure-picker{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 36rpx;
  align-items: center;
  position: relative;
}
.adventure-picker {
  margin-top: 40rpx;
  /* margin-left: 20rpx; */
}

.adventure-picker>view{
  width: 110rpx;
}

.adventure-picker>view:first-child text{
  font-size: 30rpx;
}
.adventure-picker picker,adventure-picker .price-input{
  border: 2rpx solid var(--line-gray);
  height: 54rpx;
  line-height: 54rpx;
  width: 200rpx;
  font-size: 28rpx;
  padding-left: 14rpx;
  border-radius: 10rpx;
  z-index: 100;
}
.adventure-picker:last-child picker,adventure-picker:last-child .price-input{
  width: 230rpx;
}
.adventure-picker .icon-arrowdownb{
  color: var(--line-gray);
  position: absolute;
  right: 14rpx;
  font-size: 40rpx;
}
.recommend-info{
  padding: 10rpx 6rpx;
  border-bottom:  2rpx solid var(--page-bg);
}

.recommend-info .detail-info{
  display: flex;
  align-items: center;
  /* justify-content: space-around; */
}
.detail-info>view:last-child{
  display: flex;
  justify-content: center;
}
.detail-info .title{
  width: 100rpx;
  text-align: center;
}

.recommend-info .image-info{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.recommend-info .image-info image{
  width: 110rpx;
  height: 110rpx;
}
.recommend-bottom{
  margin: 20rpx 0;
  margin-bottom: 50rpx;
  padding: 0 26rpx;
}
.recommend-bottom text,.detail-info .title text{
  font-size: 28rpx !important;
}
.recommend-bottom .tip{
  margin-left: 22rpx;
  line-height: 40rpx;
  padding-bottom: 30rpx;
  margin-bottom: 40rpx;
}
