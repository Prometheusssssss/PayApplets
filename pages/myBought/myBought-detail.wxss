/* pages/customerOrder/customerOrder-detail.wxss */
@import "/assets/my-components/button/index.wxss";
lm-framework {
  height: 100%;
}
button{
  margin: 0!important;
  width: 220rpx !important;
}
.msg-content{
  display: flex;
  align-items: center;
}
.special-image{
  width: 120rpx;
  height: 120rpx;
}
.bottom{
  display: flex;
  flex-direction: row;
  /* justify-content: space-between !important; */
}
page{
  background-color:white
}
.customer-detail{
  /* background-color:white */
}
.customer-header{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding: 10rpx 20rpx;
  border-bottom: 2rpx solid var(--page-bg);
  padding-bottom: 26rpx;
}
.customer-status{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.customer-status .text{
  font-size: 26rpx;
  color: var(--text-black)
}
.icon-black{
  color: var(--icon-black);
}
.icon-blue{
  color: var(--main-style);
}
.icon-check1{
  font-size: 42rpx;
}

.my-product-item {
  width: calc(100% - 40rpx);
  border-bottom: 10rpx solid var(--page-bg);
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 12rpx 20rpx;
  /* margin: 0 22rpx; */
}

.item-product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 10vh;
}

.item-product-image {
  width: 170rpx;
  height: 150rpx;
  margin-right: 24rpx;
}

.item-product-name {
  font-size: 30rpx;
  letter-spacing: 0.8rpx;
  font-weight: 500;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}
.item-product-price-info{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.item-product-price-info text{
  font-size: 28rpx;
}
.item-product-price-info .item-product-price{
  color: var(--text-red);
  letter-spacing: 0.88rpx;
}
/* 买家信息 */
.customer-bought-info{
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 18rpx solid var(--page-bg);
  margin-top: 12rpx;
}
.customer-bought-info .bought-title,.customer-bought-info .bought-detail{
  line-height: 44rpx;
}
.customer-bought-info .bought-title{
  border-bottom: 2rpx solid var(--line-gray);
padding-bottom: 10rpx;
}
.customer-bought-info .bought-detail{
  margin-top: 10rpx;
}
.customer-bought-info .bought-title text{
  font-size: 30rpx;
  color: var(--text-black);
}
.customer-bought-info .bought-detail .buyUserName{
  margin-right: 10rpx;
}
.customer-bought-info .bought-detail text{
  font-size: 26rpx;
}

.customer-bought-info:last-child{
  border-bottom: none;
  margin-top: 30rpx;
}
.bought-detail .copy{
  text-decoration: underline ;
}