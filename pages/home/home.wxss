/* pages/home/home.wxss */
.content{
  /* margin-top: 24rpx; */
}
.various-enhancements{
  padding-top: 20rpx;
  background-color: white;
  margin-bottom: 14rpx;
}
.tools-title{
  padding-left: 30rpx;
  margin: 10rpx 0;
}
.tools-title text{
  font-size: 28rpx;
}
.common-tools{
  padding-top: 20rpx;
  background-color: white;
}
.common-tools .tools-title{

}
.banner-list {
  min-height: 370rpx;
  max-height: 370rpx;
}

.banner-list image {
  width: 100%;
  display: block;
  height: 100%;
  margin: 0;
  pointer-events: none;
}
.area-list{
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  justify-content: space-between;
  background: white;
}
.area-list:first-child{
  padding-top: 20rpx;
}
.area-list:last-child{
  padding-bottom: 20rpx;
  
}
.area-list.mgb{margin-bottom: 20rpx;}
.area-list .area-info{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 40rpx 0;
  border: 4rpx solid var(--main-style);
  position: relative;
}
.area-info .look-forward{
  position: absolute;
  top: 0;
  left: -2rpx;
}
.area-info .look-forward image{
  width: 64rpx;
  height: 64rpx;
   margin-right: 0;
}

.area-list .area-info-min{
  /* width: 50%; */
  width: calc(50% - 10rpx);
}
.area-list .area-info:first-child{
  margin-right: 10rpx;
}
.area-info image{
  width: 84rpx;
  height: 84rpx;
  margin-right: 20rpx;
}
.area-info .strategyList4 image:last-child{
  width: 94rpx;
  height: 94rpx;
}
.strategyList-name text{
  font-size: 30rpx;
}
.white-bg{
  background-color: white;
  height: 40rpx;
}
.user-info {
  flex: 1;
  display: flex;
  flex-direction: row;
  padding: 1vh 0 1vh 0;
  justify-content: flex-start;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: calc(22rpx + 20rpx);
  padding-right: 20rpx;
  width: calc(100vw - 20rpx - 42rpx); 
  background-color: white;
  margin-bottom: 10rpx;
  position: relative;
}

.user-info .user-image {
  width: 8vh;
  height: 8vh;
  margin-right: 41rpx;
  border-radius: 100%;
  overflow: hidden;
  border: 2rpx solid var(--text-gray);
}

.user-info .title-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  line-height: 56rpx;
}

.user-info .title-info text{
  font-size: 28rpx;
  font-weight: 500;
}
.user-info .title-info .user-name{
  /* margin-left: 20rpx; */
}
.user-info .invalidate-user {
  color: var(--text-black);
  padding: 30rpx;
  font-size: 26rpx;
}
.user-info .invalidate-user .icon{
  font-size: 42rpx;
}
.strategyList-info{
  width: 160rpx;
  text-align: left;
}
.waiting-info{
  height: 420rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.waiting-info image{
  width: 100%;
  height: inherit;
}
.tip-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.tip-info text{
  font-size: 26rpx;
}
.tip-info .tip-public{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.tip-public .previewImage{
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 0 20rpx 16rpx;
}
.tip-public .zanImageUrl{
  margin-left: 40rpx;
}
.tip-info image{
  width: 100%;
  height: 100%;
  /* margin: 20rpx 0 20rpx 16rpx; */
}
