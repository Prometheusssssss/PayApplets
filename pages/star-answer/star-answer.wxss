/* pages/star-answer/star-answer.wxss */
@import '/assets/my-components/button/index.wxss';
 @import "/assets/my-components/mask-confirm/index.wxss";
 @import "../public-css/mask-layer-tel.wxss";
.first-in{
  padding-top: 100rpx;
}
.first-in >view{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.first-in button{
  margin: 30rpx 0;
}

.search-content{
  display: flex;
  flex-direction: column;
  padding: 10rpx 40rpx;
  margin: 0 8rpx 2rpx 8rpx;
  /* background-color: white; */
  width: calc(100% - 96rpx);
  border-bottom: 2rpx solid var(--page-bg);
}
.search-content>view{
  line-height: 60rpx;
}
.search-in{
  /* padding: 10rpx 40rpx;
  background-color: white;
  width: calc(100% - 80rpx);
  margin-bottom: 6rpx; */
}
.search-in>view:last-child{
  background-color: white;
}
.answer-text{
  margin-left: 80rpx;
}
.answer-text text{
  font-size: 30rpx;
}
.answer-content{
  display: flex;
  flex-direction: row;
  /* justify-content: space-evenly; */
  align-items: center;
  margin: 10rpx 0 10rpx 80rpx;
}
.answer-content text{
  font-size: 30rpx;
}
.answer-content .true-answer{
  margin-right: 80rpx;
}
.no-content{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background: var(--page-bg) !important;line-height: 50rpx;
  font-size: 34rpx;
  padding-top: 100rpx;
}
.no-content>view:first-child{
  margin-bottom: 70rpx;
  line-height: 50rpx;
  font-size: 34rpx;
}
.no-content button{
  margin: 40rpx 0;
}
.active{
  color: var(--text-acitve);
}
/* 确认登录弹框 */
.mask-layer-content>.main-content>.content{
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
}
.mask-layer-content>.main-content>.content text{
  font-size: 26rpx;
}
.confirm-btn:first-child{
  border-right: 2rpx solid var(--line-gray);
}
.confirm-btn{
  height: 100rpx;
  padding: 16rpx 24rpx;
  border-radius: 0;
  font-size: 30rpx;
  font-weight: normal;
  margin: 0;
  width: 50%;
}
.confirm-btn:last-child{
  color: var(--main-style);
}
.item-product-bottom{
  display: flex;
  align-items: center;
  text-align: center;
  margin-top: 24rpx;
  justify-content: center;
}
.item-product-image{
  display: flex;
  flex-direction: column;
  align-items: start;
  margin-top: 10rpx;
}
.item-product-image image{
  width: 410rpx;
  height: 200rpx;
}
.item-product-image .row-flex-right{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;

}