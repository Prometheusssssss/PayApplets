@import "../../private-icon/font.wxss";

.content {
    padding: 37rpx 0;
}

.date {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.startDate,
.endDate,
.to {
    color: var(--text-gray);
    font-size: 30rpx;
    letter-spacing: 1.1rpx;
}

.select {
    color: var(--main-style);
}

.picker-view-item {
    height: 50rpx !important;
    line-height: 50rpx;
    letter-spacing: 1.1rpx;
    text-align: center;
    font-size: 30rpx;
}

picker-view {
    width: 100%;
    height: 280rpx;
    padding: 24rpx 0;
}

.picker-line {
    height: 50rpx;
    line-height: 50rpx;
}

.date-show {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 252rpx;
    border-radius: 43rpx;
    background: white;
}

.date-show>view {
    display: flex;
    flex-direction: column;
}

.date-show>view text {
    font-size: 28rpx;
    letter-spacing: 1rpx;
    color: #575757;
}

.icon-down {
    color: var(--icon-gray);
}