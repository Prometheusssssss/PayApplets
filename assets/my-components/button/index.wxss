.gray {
  background: #e6e6e6;
}

.dark-gray {
  background: #999999;
}
.main-bgcolor {
  background: linear-gradient(90deg, var(--main-lgba) 5%, var(--main-lgbb) 100%);
}

.main-color {
  background: linear-gradient(-90deg, var(--main-lga) 4%, var(--main-lgb) 100%);
}
.main-color.outline {
  border: 2rpx solid var(--main-style) !important;
  background: white;
}
/*操作用小按钮 主要在侧边栏*/
.mini-operate {
  margin: 0;

  min-width: 100rpx;
  height: 48rpx;
  border: none;
  border-radius: 10rpx;
  color: white;
  line-height: 48rpx;
  font-size: 24rpx;
  letter-spacing: 0.88rpx;
}

.mask-operate {
  margin: 0;
  min-width: 204rpx;
  height: 48rpx;
  border: none;
  border-radius: 24rpx;
  color: black;
  line-height: 48rpx;
  font-size: 24rpx;
  letter-spacing: 0.88rpx;
}
