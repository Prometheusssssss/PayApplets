.sj-label-slider {
  min-height: 100%;
  width:100%;
  background:white;
  overflow:hidden;
}

.touch-item {
  width: 100%;
  overflow-x: scroll;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.content {
  width: 100%;
  height: 100%;
  line-height: 44rpx;
  margin-right: 0;
  transition: all 0.4s;
  display: flex;
}

.button-area {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  transition: all 0.4s;
  height: 100%;
  position: absolute;
  top: 0;

}

.right-button {
  text-align: center;
  width: 0rpx;
  height: 100%;
  transition: all 0.4s;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #fff;
  overflow: hidden;
  font-size: 36rpx;
}


.content {
	transition: all .4s ease-in-out 0s;
  transform: translateX(0);
  position: relative;
}



.content .move {
	position: absolute;
	right: 0;
	display: flex;
	height: 100%;
	transform: translateX(100%)
}
