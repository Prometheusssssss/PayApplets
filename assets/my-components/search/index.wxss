@import "../../private-icon/font.wxss";
@import "../../../config.wxss";
.picker-text{
  margin-left: 30rpx;
  font-size: 28rpx;
  /* color: ; */
}
.icon-down{font-size: 28rpx;}
.recorder-loadding-pos {
  position: absolute;
  top: calc(50% - 150rpx);
  left: calc(50% - 190rpx);
}
.recorder-loadding {
  position: relative;
  width: 380rpx;
  height: 220rpx;
  border-radius: 30rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  align-items: center;
  background-image: linear-gradient(90deg, #26A0F1 0%, #2583F5 100%);
}
.gifbg{
  width: 100%;
  height:100%;
  overflow: hidden;
  position: relative;
}
.recorder-loadding image {
  mix-blend-mode: screen;
  width: 100%;
}
.recorder-loadding text {
  font-size: 32rpx;
  font-weight: 500;
  color: white;
  margin-top: 20rpx;
}

.search {
  position: relative;
  padding: 24rpx 20rpx;
  background: white;
  width: calc(100% - 40rpx);
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 72rpx;
}

.search-info {
  background-color: var(--page-bg);
  padding: 20rpx 0;
  width: 100%;
  height: 100rpx;
}

.search-placeholder {
  color: var(--text-gray);
}

.gray-search-bg {
  
  padding: 0 22rpx;
  background: var(--page-bg);
  height: 72rpx;
  border-radius: 8rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.search input {
  width: calc(100% - 100rpx);

  font-size: 26rpx;
  letter-spacing: 0.72rpx;
  color: var(--text-gray);
}

.search-info picker {
  background: white;
  padding: 0 22rpx;
  height: 100rpx;
  border-radius: 2;
  width: calc(100% - 44rpx);
  font-size: 26rpx;
}

.search-date picker {
  flex: 1;
  padding: 0 22rpx;
  background: var(--page-bg);
  height: 72rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  letter-spacing: 0.72rpx;
  color: var(--text-gray);
  display: flex;
  align-items: center;
}

.picker-content text {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  color: var(--text-gray);
}

.picker-content .dark-gray {
  color: var(--text-gray-dark);
  margin-left: 12rpx;
}

.delete-i {
  position: absolute;
  left: 500rpx;
  top: 36rpx;
  font-size: 44rpx !important;
  z-index: 10;
  color: var(--main-style);
}

.search-i {
  position: absolute;
  right: 32rpx;
  top: 34rpx;
  font-size: 48rpx !important;
  color: var(--icon-gray);
}

.icon-search {
  position: absolute;
  left: 30rpx;
  top: 40rpx;  
  z-index: 1;
  color: var(--icon-gray);
  font-size: 38rpx !important;
}

.search-date-blue {
  color: var(--main-lgb);
}

.search-i-blue {
  color: var(--main-lgb);
  top: 46rpx !important;
}

.icon-voice {
  z-index: 10;
}

.left-i {
  margin-left: 26rpx;
  font-size: 48rpx !important;
  color: var(--main-style);
}
